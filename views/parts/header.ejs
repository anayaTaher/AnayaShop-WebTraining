<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="/siteIcon.png"/>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/header-style.css">
    <title><%= pageTitle %> - Anaya Shop</title>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/"><img src="/siteIcon.png"> <b>Anaya</b><sub>Shop</sub></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <ul class="navbar-nav ms-auto flex-nowrap">
            <div class="collapse navbar-collapse flex-grow-1 text-right align-content-end" id="navbarSupportedContent">
                <% if (isUser) { %>
                    <p class="username"><%= username %></p>
                <% } %>
                <li class="nav-item"><a class="nav-link active" href="/">Home</a></li>
                <% if (isUser) { %>
                    <li class="nav-item"><a class="nav-link active" href="/cart">Cart</a></li>
                    <li class="nav-item"><a class="nav-link active" href="/order/orders">Orders</a></li>
                <% } %>
                <% if (isAdmin) { %>
                    <li class="nav-item"><a class="nav-link active" href="/admin/add">Add Product</a></li>
                    <li class="nav-item"><a class="nav-link active" href="/admin/manage">Manage Orders</a></li>
                <% } %>
                <% if (!isUser) { %>
                    <li class="nav-item"><a class="nav-link active" href="/login">Login</a></li>
                    <li class="nav-item"><a class="nav-link active" href="/signup">Sign Up</a></li>
                <% } else { %>
                    <li class="nav-item">
                        <form action="/logout" method="post">
                            <button type="submit" class="btn btn-danger m-0 p-0"><a class="nav-link active"
                                                                                    href="/logout">Logout</a></button>
                        </form>
                    </li>
                <% } %>
        </ul>
    </div>
    </div>
</nav>